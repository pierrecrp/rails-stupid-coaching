<div class="container m-3">
  <div class="row">
    <div class="col-6 col-sm-3">
      <h1>Stupid coaching</h1>
    </div>
    <div class="w-100"></div>
    <div class="col-6 col-sm-3 mb-3 border-start border-dark border-5">
      <%= @question %>
      <p>- You</p>
    </div>
    <div class="w-100"></div>
    <div class="col-6 col-sm-3 mb-3 border-start border-dark border-5 bg-light" style="--bs-bg-opacity: .5;"> 
      <strong><%=@answer%></strong>
      <p>- Your coach</p>
    </div>
    <div class="w-100"></div>
    <div class="col-6 col-sm-3">
      <%= link_to 'Ask another question', ask_path %>
    </div>
  </div>
</div>